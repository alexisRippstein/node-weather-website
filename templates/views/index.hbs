<!DOCTYPE html>
<html lang="en" class="h-100">
{{>globalHead}}

<body class="d-flex flex-column h-100">
	{{>header}}
	<main role="main" class="flex-shrink-0">
		<div class="container">
			<div class="starter-template">
				<h1>{{title}}</h1>
				<p class="lead">Use this Site as a way to quickly check the weather!<br> Just enter your location down bellow.</p>
				<form id="weatherForm" class="">
					<div class="form-row">
						<div class="form-group mb-2 col-sm-4 offset-md-3">
							<label for="inputLocation" class="sr-only">Location</label>
							<input type="text" name="adress" class="form-control" id="inputLocation" placeholder="Location">
						</div>
						<button type="submit" class="btn btn-primary col-sm-2 mb-2">Search</button>
					</div>
				</form>
				<div id="weatherMsg" class="d-block">
					<h3 id="location"></h3>
					<h5 id="forecast"></h5>
				</div>

				<div id="errorMsg" class="s" role="alert"></div>

				<div id="spinner" class="spinner-border d-none" role="status">
				  <span class="sr-only">Loading...</span>
				</div>
				
			</div>
		</div><!-- /.container -->
	</main><!-- /.main -->
	{{>globalFooter}}
	<!-- Body Styles -->
	{{>globalBodyStyles}}
	<!-- Body Scripts -->
	{{>globalBodyScripts}}
	<!-- local Page Scripts -->
	<script src="/js/app.js"></script>
</body>

</html>