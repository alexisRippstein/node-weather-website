<div id="wheaterWidget" class="containerWheater">
    <div class="weather-side">
        <div class="weather-gradient"></div>
        <div class="date-container">
            <h2 class="date-dayname">Tuesday</h2>
            <span class="date-day">15 Jan 2019</span>
            <i class="location-icon" data-feather="map-pin"></i>
            <span class="location">Paris</span><span class="shortCode"> FR</span>
        </div>
        <div class="weather-container">
            <img class="weather-icon-today" src="/img/weatherIcons/clear-day.svg">
            <h1 id="weatherTemp" class="weather-temp"></h1>
            <h1 class="weather-temp-sign">°C</h1>
            <h3 class="weather-desc">Sunny</h3>
        </div>
    </div>
    <div class="info-side">
        <div class="today-info-container">
            <div class="today-info">
                <div class="precipitation"> <span class="title">PRECIPITATION</span><span class="value">0 %</span>
                    <div class="clear"></div>
                </div>
                <div class="humidity"> <span class="title">HUMIDITY</span><span class="value">34 %</span>
                    <div class="clear"></div>
                </div>
                <div class="wind"> <span class="title">WIND</span><span class="value">0 km/h</span>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
        <div class="week-container">
            <ul class="week-list">
                <li class="active" onclick="">
                    <img class="day-icon" src="/img/weatherIcons/clear-day.svg">
                    <span class="day-name">Tue</span>
                    <span class="day-temp">29°C</span>
                </li>

                <li>
                    <img class="day-icon" src="/img/weatherIcons/clear-day.svg">
                    <span class="day-name">Wed</span>
                    <span class="day-temp">21°C</span></li>
                <li>
                    <img class="day-icon" src="/img/weatherIcons/clear-day.svg">
                    <span class="day-name">Thu</span>
                    <span class="day-temp">08°C</span>
                </li>
                <li>
                    <img class="day-icon" src="/img/weatherIcons/clear-day.svg">
                    <span class="day-name">Fry</span>
                    <span class="day-temp">19°C</span>
                </li>
                <div class="clear"></div>
            </ul>
        </div>
        <div class="location-container">
            <button class="location-button">
                <img class="map-pin" src="/img/map-pin.svg">
                <span>Change location</span></button>
        </div>
    </div>
</div>